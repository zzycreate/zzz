root = true

[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{groovy, java, kt}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.js]
indent_style = space
indent_size = 4

[*.{xml, jsp, html}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false
